package main;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.PrintWriter;

public class Karte {

	ClientHandler ch;

	public Karte(ClientHandler client) {
		ch = client;
	}

	int brojObicnihKarata = 20;
	int brojVIPKarata = 5;

	public void napraviFajl() {
		File f = new File("C:\\Users\\Nikola\\Desktop\\RMT domaci\\Server\\karte.txt");
		if (f.exists() && !f.isDirectory()) {
			ch.clientOutput.println("Broj raspoloživih obiènih karata: " + brojObicnihKarata);
			ch.clientOutput.println("Broj raspoloživih VIP karata: " + brojVIPKarata);
		} else {
			try (FileWriter fw = new FileWriter("karte.txt", true);
					BufferedWriter bw = new BufferedWriter(fw);
					PrintWriter pw = new PrintWriter(bw)) {
				pw.println(brojObicnihKarata);
				pw.println(brojVIPKarata);
			} catch (Exception e) {
				ch.clientOutput.println("Greška prilikom rada sa fajlovima: " + e.getMessage());
			}
		}
	}
	
	public int vratiBrojObicnihKarata() {
		int brojObicnihKarata = 0;
		
		return brojObicnihKarata;
	}
}
